@model List<WebThuySinh.Models.Catagories>
@{
    ViewBag.Title = "Index";

}




<table class="table align-middle mb-0 bg-white">
    <thead class="bg-light">
        <tr>
            <th>CategoryID</th>
            <th>CategoryName</th>
            <th>Function</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>


                <td>
                    <p class="fw-normal mb-1">@item.CategoryID</p>

                </td>

                <td>
                    <span class=" badge-success rounded-pill d-inline">@item.CategoryName</span>
                </td>



                <td>

                    <a href="/Catagory/Update/@item.CategoryID" type="button" class="text-decoration-none btn btn-link btn-sm btn-rounded">
                        Update
                    </a>
                    |
                    <a href="/Catagory/Delete/@item.CategoryID" type="button" class="text-decoration-none btn btn-link btn-sm btn-rounded">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
