@model WebThuySinh.Models.Products
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
@using (Html.BeginForm("Update", "Product", new { area = "Admin" } ,FormMethod.Post, new { enctype = "multipart/dorm-data" }))
{
   <div class="container rounded bg-white mt-5">

       <div class="row">

           <div class="col-md-4 border-right">

               <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" src="~/Image/@Model.Image" width="150px" height="150px"><span class="font-weight-bold">@Model.ProductName</span><span class="text-black-50">@Model.Description</span><span>@Model.CategoryID</span></div>

           </div>

           <div class="col-md-8">
               <div class="p-3 py-5">
                   <div class="d-flex justify-content-between align-items-center mb-3">
                       <div class="d-flex flex-row align-items-center back">
                           <i class="fa fa-long-arrow-left mr-1 mb-1"></i>
                           <a class="text-decoration-none" href="/Product/Index"><h6>Back to home</h6></a>
                       </div>
                       <h6 class="text-right">Edit Profile</h6>
                   </div>



                   <div class="container mt-3">
                       <div class="row">
                           <!-- Cột 1 -->
                           <div class="col-md-6">

                               <div class="row mb-3">
                                   <div class="col-md-4">
                                       @Html.LabelFor(row => row.ProductID)
                                   </div>
                                   <div class="col-md-8">
                                       @Html.TextBoxFor(row => row.ProductID, new { @class = "form-control", placeholder = "ProductID" })
                                   
                                   </div>
                               </div>

                               <div class="row mb-3">
                                   <div class="col-md-4">
                                       <label for="firstName">Name</label>
                                   </div>
                                   <div class="col-md-8">
                                       <input type="text" id="ProductName" name="ProductName" class="form-control" placeholder="@Model.ProductName">
                                   </div>
                               </div>

                               <div class="row mb-3">
                                   <div class="col-md-4">
                                       <label for="email">Description</label>
                                   </div>
                                   <div class="col-md-8">
                                       <input type="text" id="Description" name="Description" class="form-control" placeholder="@Model.Description">
                                   </div>
                               </div>

                               <div class="row mb-3">
                                   <div class="col-md-4">
                                       <label for="address">Price</label>
                                   </div>
                                   <div class="col-md-8">
                                       <input type="number" id="Price" name="Price" class="form-control" placeholder="@Model.Price">
                                   </div>
                               </div>
                           </div>

                           <!-- Cột 2 -->
                               <div class="col-md-6">
                                   <div class="row mb-3">
                                       <div class="col-md-4">
                                           <label for="lastName">Categories</label>
                                       </div>
                                       <div class="col-md-8">
                                           <input type="text" id="CategoryID" name="CategoryID" class="form-control" placeholder="@Model.CategoryID">
                                       </div>
                                   </div>

                                   <div class="row mb-3">
                                       <div class="col-md-4">
                                           <label for="phone">QuantityInStock</label>
                                       </div>
                                       <div class="col-md-8">
                                           <input type="tel" id="QuantityInStock" name="QuantityInStock" class="form-control" placeholder="@Model.QuantityInStock">
                                       </div>
                                   </div>

                                   <div class="row mb-3">
                                       <div class="col-md-4">
                                           <label for="city">Image</label>
                                       </div>
                                       <div class="col-md-8">
                                           <input type="text" id="Image" name="Image" class="form-control" placeholder="Add main Image">
                                       </div>
                                   </div>
                               </div>
                           </div>

                           <div class="text-center">
                               <div class="text-lèt">
                                   <h6 class="text-right">Add Another Images</h6>
                               </div>
                               <input type="text" id="ImageProducts" name="ImageProducts" class="form-control" placeholder="Anothers Image">
                           </div>
                           <div class="text-center mt-4">
                               <button type="submit" class="btn btn-primary">Submit</button>
                           </div>

                   </div>
               </div>
           </div>
       </div>
   </div>
}